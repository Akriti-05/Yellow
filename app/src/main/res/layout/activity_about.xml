<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sunflowerback"
    android:orientation="vertical"
    tools:context=".aboutActivity">

    <LinearLayout
        android:id="@+id/linearVertical"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5mdp"
                android:layout_marginLeft="@dimen/_5mdp"
                android:layout_marginEnd="@dimen/_5mdp"
                android:layout_marginRight="@dimen/_5mdp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_messenger" />

            <Button
                android:id="@+id/btnCare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5mdp"
                android:layout_marginLeft="@dimen/_5mdp"
                android:layout_marginEnd="@dimen/_5mdp"
                android:layout_marginRight="@dimen/_5mdp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_inspiration" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="CHAT"
                android:textColor="#875F01"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="CALM DOWN"
                android:textColor="#875F01"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5mdp"
                android:layout_marginLeft="@dimen/_5mdp"
                android:layout_marginEnd="@dimen/_5mdp"
                android:layout_marginRight="@dimen/_5mdp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_writing" />

            <Button
                android:id="@+id/btnX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5mdp"
                android:layout_marginLeft="@dimen/_5mdp"
                android:layout_marginEnd="@dimen/_5mdp"
                android:layout_marginRight="@dimen/_5mdp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_creative" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linerhorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20mdp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="POST"
                android:textColor="#875F01"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvcontact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_40mdp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="YOU'LL BE FINE"
                android:textColor="#875F01"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearVertical"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_30mdp"
        android:layout_marginEnd="@dimen/_50mdp"
        android:clickable="true"
        app:backgroundTint="@color/purple_200"
        app:srcCompat="@drawable/profile" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/floatingActionButton"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_5mdp"
        android:layout_marginRight="@dimen/_50mdp"
        android:textColor="#875F01"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="PROFILE" />

</RelativeLayout>